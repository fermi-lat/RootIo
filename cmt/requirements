package RootIo
version v12r3

# $Header$

branches src doc

use Event v9r*
use ROOT v2r* IExternal

apply_pattern packageShr
apply_pattern package_include

use RootPolicy v4r* -no_auto_imports
use mcRootData v2r* -no_auto_imports
use digiRootData v7r* -no_auto_imports
use reconRootData v4r* -no_auto_imports
use commonRootData v0r* -no_auto_imports

use LdfEvent v*

private
use GlastSvc v9r*

# for building this DLL, need includes from the rootData packages

macro_append RootIo_cppflags " $(RootPolicy_cppflags) $(root_packages_include)"

macro source "*.cxx" WIN32 "*.cxx *.h"
library RootIo  $(root_packages_import) -s=../RootIo $(source) -s=../src $(source) -s=Dll *.cxx 

apply_pattern package_test
apply_pattern package_Cshlibflags

#specify these to disable rootcint portion of vcproj_library_header set by RootPolicy

macro rootcint_begin "" vsnet "<!--"
macro rootcint_end   "" vsnet "-->"
